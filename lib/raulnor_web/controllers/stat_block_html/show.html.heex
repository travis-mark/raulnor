<.header>
  {@stat_block.name}
  <:subtitle>{@stat_block.size} {@stat_block.type}, {@stat_block.alignment}</:subtitle>
  <:actions>
    <.link href={~p"/stat_blocks/#{@stat_block}/edit"}>
      <.button>Edit</.button>
    </.link>
  </:actions>
</.header>
<p><b>AC</b> {@stat_block.ac} <b>Initiative</b> {@stat_block.initiative}</p>
<p><b>HP</b> {@stat_block.maxhp} <b>Speed</b> {@stat_block.speed}</p>
