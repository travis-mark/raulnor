  <tr><td class="bg-amber-100">WIS</td><td class="bg-amber-100">{@stat_block.wis}</td><td></td></tr>
</table>
<table>
  <tr><td></td><td></td><td>MOD</td><td>SAVE</td></tr>
  <tr><td class="bg-amber-100">DEX</td><td class="bg-amber-100">{@stat_block.dex}</td><td></td><td></td></tr>
  <tr><td class="bg-amber-100">INT</td><td class="bg-amber-100">{@stat_block.int}</td><td></td><td></td></tr>
</table>
<table>
  <tr><td></td><td></td><td>MOD</td><td>SAVE</td></tr>
  <tr><td class="bg-amber-100">CON</td><td class="bg-amber-100">{@stat_block.con}</td><td></td></tr>
  <tr><td class="bg-amber-100">CHA</td><td class="bg-amber-100">{@stat_block.cha}</td><td></td></tr>
</table>
